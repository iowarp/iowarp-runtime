# ChimaeraConfig.cmake.in
# Config file for the Chimaera package

@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Find required dependencies
find_dependency(HermesShm CONFIG REQUIRED)
find_dependency(cereal REQUIRED)
find_dependency(Boost REQUIRED COMPONENTS fiber context system)

# Include the exported targets
include("${CMAKE_CURRENT_LIST_DIR}/@MAIN_EXPORT_NAME@.cmake")

# Include ChimaeraCommon.cmake for external ChiMod development
include("${CMAKE_CURRENT_LIST_DIR}/ChimaeraCommon.cmake")

# Provide components
check_required_components(@MAIN_PACKAGE_NAME@)