# ChimaeraConfig.cmake.in
# Config file for the Chimaera package

@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Find required dependencies for external projects
find_dependency(HermesShm CONFIG REQUIRED)
find_dependency(cereal REQUIRED)
find_dependency(Boost REQUIRED COMPONENTS fiber context)

# Include the exported targets
include("${CMAKE_CURRENT_LIST_DIR}/@MAIN_EXPORT_NAME@.cmake")

# Include ChimaeraCommon.cmake for ChiMod utilities (add_chimod_both, install_chimod)
include("${CMAKE_CURRENT_LIST_DIR}/ChimaeraCommon.cmake")

# Create convenience alias
if(NOT TARGET @MAIN_PACKAGE_NAME@)
  add_library(@MAIN_PACKAGE_NAME@ ALIAS @CHIMAERA_NAMESPACE@::cxx)
endif()

# Provide convenience variables for include directories
# These are particularly useful for IDEs and external build systems
set(CHIMAERA_INCLUDE_DIRS 
    "${CMAKE_CURRENT_LIST_DIR}/../../include"
    "${CMAKE_CURRENT_LIST_DIR}/../../chimods/admin/include"
    "${CMAKE_CURRENT_LIST_DIR}/../../chimods/bdev/include"
    "${CMAKE_CURRENT_LIST_DIR}/../../chimods/MOD_NAME/include")

# Also export as cache variables for CMake GUI users
set(CHIMAERA_INCLUDE_DIRS "${CHIMAERA_INCLUDE_DIRS}" CACHE STRING "Chimaera include directories")

# Provide components
check_required_components(@MAIN_PACKAGE_NAME@)